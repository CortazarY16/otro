<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityMenu">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:foregroundTint="#8CAFAC"
        tools:layout_editor_absoluteX="-56dp"
        tools:layout_editor_absoluteY="0dp">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="cursive"
            android:text="Novedades &quot;La China&quot;"
            android:textSize="34sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.054" />

        <ScrollView
            android:id="@+id/scrollView2"
            android:layout_width="433dp"
            android:layout_height="291dp"
            android:layout_marginBottom="104dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btnRegisterProduct"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Registrar Producto"
                    android:textColorLink="#E91ED8" />

                <Button
                    android:id="@+id/btnViewProducts"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Productos Existentes"
                    android:textColorLink="#E91ED8" />

                <Button
                    android:id="@+id/btnOutgoingProducts"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Productos Salientes" />

                <Button
                    android:id="@+id/btnRegisterClients"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Registro de Cientes"
                    android:textColorLink="#E91ED8" />

                <Button
                    android:id="@+id/btnExit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Salir"
                    android:textColorLink="#E91ED8" />
            </LinearLayout>
        </ScrollView>

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@+id/scrollView2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView3"
            app:srcCompat="@drawable/menu" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>